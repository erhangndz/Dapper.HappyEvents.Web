@using Dapper.HappyEvents.Application.Dtos;
@model List<TeamDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3 class="container">Ekibimiz</h3>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Sosyal Medya</th>
     

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>  @item.TeamID</th>
            <td><img src="@item.Image" style="height:50px;width:50px" />  @item.Name</td>
            <td><a href="@item.facebook"><i class="fab fa-facebook"></i></a> | 
            <a href="@item.twitter"><i class="fab fa-twitter"></i></a> | 
            <a href="@item.instagram"><i class="fab fa-instagram"></i></a></td>
           

            <td>
                <a asp-action="Delete" asp-route-id="@item.TeamID" class="btn btn-outline-danger"><i class="fas fa-trash"></i></a>
                <a asp-action="Update" asp-route-id="@item.TeamID" class="btn btn-outline-dark"><i class="fas fa-pen"></i></a>
            </td>
        </tr>
    }



</table>
<br />
<div class="container">
    <a asp-action="Insert" class="btn btn-primary">Yeni Çalışan Ekle</a>
</div>




