@using Dapper.HappyEvents.Application.Dtos;
@model List<ServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3 class="container">Hizmetlerimiz</h3>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>  @item.ServiceID</th>
            <td><img src="@item.Icon" style="height:50px;width:50px" />  @item.Title</td>
            <td>@item.Description.Substring(0,30) ...</td>
     
            <td>
                <a asp-action="Delete" asp-route-id="@item.ServiceID" class="btn btn-outline-danger"><i class="fas fa-trash"></i></a>
                <a asp-action="Update" asp-route-id="@item.ServiceID" class="btn btn-outline-dark"><i class="fas fa-pen"></i></a>
            </td>
        </tr>
    }



</table>
<br />
<div class="container">
    <a asp-action="Insert" class="btn btn-primary">Yeni Hizmet Ekle</a>
</div>


