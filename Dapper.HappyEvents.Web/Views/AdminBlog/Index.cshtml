@using Dapper.HappyEvents.Application.Dtos;
@model List<BlogDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3 class="container">Bloglar</h3>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Yazar</th>
        <th>Tarih</th>
     
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>  @item.BlogID</th>
            <td><img src="@item.Image" style="height:50px;width:50px" />  @item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.WriterImage" style="height:50px;width:50px" /> @item.WriterName</td>
            <td>@item.Date</td>
           
            <td>
                <a asp-action="Delete" asp-route-id="@item.BlogID" class="btn btn-outline-danger"><i class="fas fa-trash"></i></a>
                <a asp-action="Update" asp-route-id="@item.BlogID" class="btn btn-outline-dark"><i class="fas fa-pen"></i></a>
            </td>
        </tr>
    }



</table>
<br />
<div class="container">
    <a asp-action="Insert" class="btn btn-primary">Yeni Blog Ekle</a>
</div>


